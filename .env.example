# Public (safe to expose to browser builds)
NEXT_PUBLIC_FB_API_KEY=<set-in-firebase>
NEXT_PUBLIC_FB_AUTH_DOMAIN=<project>.firebaseapp.com
NEXT_PUBLIC_FB_PROJECT_ID=<project-id>
NEXT_PUBLIC_FB_STORAGE_BUCKET=<project-id>.appspot.com

# Server-only (DO NOT expose)
FIREBASE_ADMIN_CLIENT_EMAIL=<service-account@project.iam.gserviceaccount.com>
FIREBASE_ADMIN_PRIVATE_KEY=<multiline private key, quote if needed>
